@page
@model ControleEstoqueW.Pages.Produtos.EditModel
@{ViewBag.Title = "Editar Produto"; }

<form method="post">
    <div class="row">
        <input type="hidden" asp-for="Produto.ID" />
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"><i class="nav-icon fas fa-pen"></i> Informações do Produto</h3>
                </div>
                <div class="card-body">
                    <p>Por favor complete com as informações abaixo para cadastrar um novo produto.</p>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card card-primary">
                                <div class="card-body">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="form-group col-md-12">
                                                <input type="hidden" asp-for="Produto.Status" class="form-control" />
                                                <label asp-for="Produto.Descricao" class="control-label">Descrição</label>
                                                <input asp-for="Produto.Descricao" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-12">
                                                <label asp-for="Produto.Categoria" class="control-label">Categoria</label>
                                                <input asp-for="Produto.Categoria" class="form-control" />
                                            </div>
                                        </div>
                                        <!-- <select asp-for="Produto.Categoria" id="categoria" name="categoria" class="form-control custom-select" required>
                                            <option value="">Escolha uma opção</option>
                                        </select>-->
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-4">
                                            <label asp-for="Produto.Quantidade" class="control-label">Quantidade</label>
                                            <input asp-for="Produto.Quantidade" class="form-control" />
                                        </div>
                                        <div class="form-group col-md-8">
                                            <label asp-for="Produto.Custo" class="control-label">Preço</label>
                                            <input asp-for="Produto.Custo" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card card-secondary">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label asp-for="Produto.Imagem" class="control-label">Endereço da Imagem</label>
                                        <input asp-for="Produto.Imagem" class="form-control" />
                                        <hr />
                                        <img src="~/Images/@Model.Imagem" class="img-thumbnail" style="max-height:160px;" />
                                        <!--<input type="file" id="imagem" accept=".png, .jpg, .jpeg" name="imagem" class="form-control"> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <a asp-page="/Produtos/SaldoEstoque" class="btn btn-secondary">Cancelar</a>
                            <input type="submit" value="Editar produto" class="btn btn-success float-right">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
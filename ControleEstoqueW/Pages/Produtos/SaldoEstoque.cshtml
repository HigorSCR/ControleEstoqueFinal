<div class="container">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Produtos em estoque</h3>
                    </div>
                </div>
                <div class="card-body">
                    <table id="tabelaProdutos" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Imagem</th>
                                <th>Descrição do Produto</th>
                                <th>Categoria</th>
                                <th>Preço</th>
                                <th>Quantidade</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model.Produtos)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => data.ID)</td>
                                    <td>
                                        <img src="~/Images/@Html.DisplayFor(modelItem => data.Imagem)" class="img-circle img-size-32 mr-2"
                                             alt="@Html.DisplayFor(modelItem => data.Imagem)" />
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => data.Descricao)</td>
                                    <td>@Html.DisplayFor(modelItem => data.Categoria)</td>
                                    <td>@Html.DisplayFor(modelItem => data.Custo)</td>
                                    <td>@Html.DisplayFor(modelItem => data.Quantidade)</td>
                                    <td>
                                        <a asp-page="/Produtos/Edit" title="Editar produto" asp-route-id="@data.ID" class="text-muted" style="padding: 0px 3px 0px 3px;">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a asp-page="/Produtos/EntradaEstoque" title="Realizar entrada no estoque" asp-route-id="@data.ID" class="text-muted" style="padding: 0px 3px 0px 3px;">
                                            <i class="fas fa-plus-circle"></i>
                                        </a>
                                        <a asp-page="/Produtos/BaixaEstoque" title="Realizar baixa no estoque" asp-route-id="@data.ID" class="text-muted" style="padding: 0px 3px 0px 3px;">
                                            <i class="fas fa-minus-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>


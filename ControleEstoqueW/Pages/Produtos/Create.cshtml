@page
@model ControleEstoqueW.Pages.Produtos.CreateModel
@{ }

<h1>Cadastrar Produto</h1>
<hr />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <input type="hidden" asp-for="Produto.ID" />
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"><i class="nav-icon fas fa-pen"></i> Informações do Produto</h3>
                </div>
                <div class="card-body">
                    <p>Por favor complete com as informações abaixo para cadastrar um novo produto.</p>
                    <div class="form-group">
                        <label asp-for="Produto.Descricao" class="control-label">Descrição</label>
                        <input asp-for="Produto.Descricao" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-body">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="Produto.Status" value="1" class="form-control" readonly />
                                        <label asp-for="Produto.Categoria" class="control-label">Categoria</label>
                                        <input asp-for="Produto.Categoria" class="form-control" />
                                        <!--<select asp-for="Produto.Categoria" asp-items="" id="categoria" name="categoria" class="form-control custom-select" required>
                                            <option value="">Escolha uma opção</option>
                                        </select> -->
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-4">
                                            <label asp-for="Produto.Quantidade" class="control-label">Quantidade</label>
                                            <input asp-for="Produto.Quantidade" class="form-control" />
                                        </div>
                                        <div class="form-group col-md-8">
                                            <label asp-for="Produto.Custo" class="control-label">Preço</label>
                                            <input asp-for="Produto.Custo" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card card-secondary">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label asp-for="Produto.Imagem" class="control-label">Imagem</label>
                                        <p>Selecione a imagem do produto:</p>
                                        <input asp-for="Produto.Imagem" class="form-control" />
                                        <input type="file" id="imagem" src="" name="imagem" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
                            <input type="submit" value="Salvar novo produto" class="btn btn-success float-right">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>